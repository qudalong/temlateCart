page {
  background: #fff;
}

.banner {
  width: 100%;
  height: 600rpx;
  margin-bottom: 40rpx;
}

.bind-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.bind-wrap .row {
  width: 75%;
  margin-top: 30rpx;
  position: relative;
}

.bind-wrap .row input {
  border: 1px solid #ccc;
  border-radius: 40rpx;
  padding: 16rpx 20rpx;
  font-size: 30rpx;
  text-indent: 20rpx;
}

.btn-login {
  text-align: center;
  background: #09b6f2;
  color: #fff;
  padding: 24rpx 0;
  border-radius: 40rpx;
  margin-top: 36rpx;
  font-size: 32rpx;
}
.yzm{
  position: relative;
  top: 0;
  left: 0;
  z-index: 1;
}
.btn-yzm {
  position: absolute;
  top: 50%;
  right: 30rpx;
  transform: translateY(-50%);
  background: #09b6f2;
  color: #fff;
  padding:16rpx 40rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
  z-index: 2;
}
