.container{
  position: absolute;
  left: 0;
  top: 0;
  bottom:100rpx;
  width: 100%;
  display: flex;
  background: #fff;
  overflow: hidden;
}
.item {
  display: flex;
}
.shop-cart .item {
  display: flex;
  justify-content: space-between;
  padding-right:60rpx;
}

.left-wrapper {
  width: 200rpx;
  text-align: center;
  padding-right: 20rpx;
  font-size: 30rpx;
  background: #f0f0f0;
}

.right-wrapper {
  flex: 1;
  text-align: center;
  font-size: 30rpx;
}
.item{
  margin-bottom: 5px;
}
.nav-item {
  padding: 10px;
  border-bottom: 1px solid #ccc;
}

.imag {
  width: 80px;
  height: 80px;
}

.a-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  background: palegoldenrod;
  text-align: left;
  padding:0 5px;
  justify-content: space-between;
}
.operation{
  display: flex;
  align-items: center;
}
.count{
  padding: 0 8rpx;
}
.row{
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.shop-cart{
  position: fixed;
  left: 0;
  bottom: 0;
  height: 100rpx;
  width: 100%;
  background: red;
}
.type-name{
  padding: 10rpx;
  text-align: left;
  background: #f0f0f0;
}
.type-wrapper .item:last-child{
  margin-bottom: 0;
}
.active{
  background: #fff;
  color: #6d9eeb;
}