}

.shop-cart-list {
  position: fixed;
  left: 0;
  /* bottom: 100rpx; */
  width: 100%;
  background: #fff;
  font-size: 30rpx;
}

/* 动画函数 */
.translateY {
  animation: showUp 0.5s 1 both;
}

@keyframes showUp {
  0% {
    bottom: 0rpx;
  }

  100% {
    bottom: 100rpx;
  }
}