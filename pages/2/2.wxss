/* 购物车详情 */
.shop-cart-list {
  position: fixed;
  left: 0;
  bottom: 100rpx;
  width: 100%;
  background: #fff;
  font-size: 30rpx;
}
.shop-cart-list .item {
  display: flex;
  justify-content: space-between;
  padding:16rpx 20rpx;
  align-items: center;
}
.shop-cart-list .food-name{
 flex: 1;
}
.shop-cart-list .money{
  min-width: 150rpx;
  text-align: center;
  margin-right: 30rpx;
}
.cover-shadow{
  position: absolute;
  top: 0;
  left: 0;
  bottom: 100rpx;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .3);
}
.cart-scroll-list{
  height: 350rpx;
}
.cart-title{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding:16rpx 20rpx;
  background: #f0f0f0;
}
.icon-gouwuche{
  position: relative;
}

/* 购物车 */
.shop-cart {
  position: fixed;
  left: 0;
  bottom: 0;
  height: 100rpx;
  width: 100%;
  background: #fff;
  font-size: 30rpx;
  background: #fff;
  display: flex;
  align-items: center;
  z-index: 999;
  border-top: 1px solid #ccc;
}
.shop-cart .cart{
  flex: 1;
  display: flex;
  align-items: center;
}
.shop-cart .btn{
  width: 200rpx;
  text-align: center;
  line-height: 100rpx;
  background: #ccc;
}

.icon-gouwuche:before {
  content: "\e601";
  font-size: 60rpx;
}
.icon-gouwuche{
  width: 90rpx;
  height: 90rpx;
  line-height: 90rpx;
  border: 1px solid #f0f0f0;
  text-align: center;
  border-radius: 50%;
  margin: 0 50rpx 0 30rpx;
}
