/* 购物车 */
.shop-cart {
  position: fixed;
  left: 0;
  bottom: 0;
  height: 100rpx;
  width: 100%;
  background: #fff;
  font-size: 30rpx;
  background: #fff;
  display: flex;
  align-items: center;
  z-index: 999;
  border-top: 1px solid #ccc;
}
.shop-cart .cart{
  flex: 1;
  display: flex;
  align-items: center;
}
.shop-cart .btn{
  width: 200rpx;
  text-align: center;
  line-height: 100rpx;
  background: #ccc;
}

.icon-gouwuche:before {
  content: "\e601";
  font-size: 60rpx;
}
.icon-gouwuche{
  width: 90rpx;
  height: 90rpx;
  line-height: 90rpx;
  border: 1px solid #f0f0f0;
  text-align: center;
  border-radius: 50%;
  margin: 0 50rpx 0 30rpx;
}
.hight{
  border: 1px solid #6d9eeb;
}
.gary{
  color: #ccc;
}

/*详情  */
.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

.cover-detail {
  width: 80%;
  background: #fff;
  position: absolute;
  top: 47%;
  left: 50%;
  transform: translate(-50%, -50%);
  border-radius: 10rpx;
  z-index: 99999999999999;
  overflow: hidden;
}

.good-info {
  padding: 10rpx 30rpx 20rpx;
  font-size: 30rpx;
}

.imgUrl {
  width: 100%;
}

.row-line {
  margin: 20rpx 0;
}

.add-card {
