<view class='box'>
  <view class='left'>
    <view wx:if='{{list.length}}' wx:for='{{list}}' wx:key='unquie' class='b'>
      <view>{{item.type_name}}</view>
    </view>
  </view>
  <view class='right'>
    <view wx:if='{{list.length}}' wx:for='{{list}}' wx:key='unquie'>
      <view wx:for='{{item.goods}}' wx:for-item="food" wx:for-index="indexs" wx:key='unquie' class='item'>
        <image src='https://mp.ucloudant.com/attachment/{{food.img}}' class='imag'></image>
        <view class='a-right'>
          <view>{{food.name}}</view>
          <view>月售量{{food.xs_num}}份</view>
          <view class='row'>
            <view>￥{{food.money}}</view>
            <v-cart food="{{food}}"  bind:selectFoods='onSelectFoods'></v-cart>    
          </view>
        </view>
      </view>
    </view>
  </view>
</view>
<!-- 购物车 -->
<view class='shop-cart'>
  <view class='item' wx:for='{{selectFoods}}' wx:for-item="food" wx:key='unquie'>
    <block >
      <view>{{food.name}}</view>
      <v-cart food="{{food}}"></v-cart>
    </block>
  </view>
</view>