.tab-swiper {
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  padding: 30rpx 0 20rpx;
  background: #fff;
}

.tab-swiper .item {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  color: #666;
  padding-bottom: 22rpx;
  position: relative;
}

.tab-swiper .item.active {
  color: #09b6f2;
  border-bottom: 1px solid #09b6f2;
}
